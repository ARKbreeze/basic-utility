{
  "name": "basic-utility-lk",
  "version": "1.0.0",
  "description": "a basic tool",
  "main": "./dist/index.js",
  "module": "./dist/index.es.js",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.es.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest test",
    "prettier": "prettier '**/*.{js,ts}' --ignore-path ./.prettierignore",
    "build": "npm run build:clean && npm run build:pro",
    "build:clean": "rimraf dist",
    "build:pro": "rollup --config ./rollup.config.pro.js",
    "build:dev": "rimraf example/dist/ && rollup --config ./rollup.config.dev.js -w",
    "doc": "jsdoc ./example/dist/index.es.js && node server.js "
  },
  "author": "luokang",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "jsdoc": "^3.6.11",
    "open": "^8.4.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-serve": "^2.0.1",
    "rollup-plugin-terser": "^7.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js}": [
      "npm run prettier"
    ]
  }
}
